<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- 4 columns -->
    <TableRow
            android:id="@+id/rowTop"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:background="#FF504347"
            android:padding="5dip">

        <TextView
                android:id="@+id/tvCalculate"
                android:layout_column="1"
                android:paddingTop="100dp"
                android:textColor="#ffffff"
                android:layout_span="3"
                android:paddingBottom="100dp"
                android:gravity="center"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3" android:layout_width="260dp"/>
    </TableRow>
    <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/btnAC"
                android:background="#D3D3D3"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:text="AC"/>
        <Button
                android:id="@+id/btnPlusMinus"
                android:background="#D3D3D3"
                android:onClick="btnOpOnClick"
                android:layout_margin="1dp"
                android:text="+/-"/>
        <Button
                android:id="@+id/btnPercent"
                android:background="#D3D3D3"
                android:onClick="btnOpOnClick"
                android:layout_margin="1dp"
                android:text="%"/>
        <Button
                android:id="@+id/btnDivide"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:onClick="btnOpOnClick"
                android:layout_margin="1dp"
                android:background="#FF9800"
                android:text="/"/>
    </TableRow>
    <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/btnNum7"
                android:background="#D3D3D3"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:text="7" />
        <Button
                android:id="@+id/btnNum8"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="8" />
        <Button
                android:id="@+id/btnNum9"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="9" />
        <Button
                android:id="@+id/btnMultiply"
                android:background="#FF9800"
                android:layout_margin="1dp"
                android:onClick="btnOpOnClick"
                android:text="*" />
    </TableRow>
    <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/btnNum4"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="4" />
        <Button
                android:id="@+id/btnNum5"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="5" />
        <Button
                android:id="@+id/btnNum6"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="6" />
        <Button
                android:id="@+id/btnMinus"
                android:background="#FF9800"
                android:layout_margin="1dp"
                android:onClick="btnOpOnClick"
                android:text="-" />
    </TableRow>
    <TableRow
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/btnNum1"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="1" />
        <Button
                android:id="@+id/btnNum2"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="2" />
        <Button
                android:id="@+id/btnNum3"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="3" />
        <Button
                android:id="@+id/btnPlus"
                android:background="#FF9800"
                android:layout_margin="1dp"
                android:onClick="btnOpOnClick"
                android:text="+" />
    </TableRow>
    <TableRow
            android:id="@+id/row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/btnNum0"
                android:onClick="btnOnClick"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:layout_span="2"
                android:text="0" android:layout_width="137dp"/>
        <Button
                android:id="@+id/btnDot"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="." />
        <Button
                android:id="@+id/btnEqual"
                android:layout_margin="1dp"
                android:background="#FF9800"
                android:onClick="btnOpOnClick"
                android:text="=" />
    </TableRow>
</TableLayout>
